@model IEnumerable<Cover>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cover" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Cover
            </a>
        </div>
    </div>
    <br/><br/>
    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>
                    Cover Name
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Cover" asp-action="Edit" asp-route-id=@obj.Id>
                                <i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-danger mx-2" asp-controller="Cover" asp-action="Delete" asp-route-id=@obj.Id>
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


